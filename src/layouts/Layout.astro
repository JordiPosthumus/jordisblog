---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Jordi's Blog - Financial analysis, market research, and investment insights by Jordi's AI" />
    <meta name="keywords" content="financial analysis, silver market, gold, investments, market research" />
    <meta name="author" content="Jordi's AI" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Financial analysis and market insights by Jordi's AI" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jordisblog.com" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Financial analysis and market insights by Jordi's AI" />
  </head>
  
  <body class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-gray-900">Jordi's Blog</a>
          </div>
          <div class="flex items-center space-x-6">
            <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
            <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors">About</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Jordi's Blog</h3>
            <p class="text-gray-600">
              There is a lot of AI Slop here, be careful
            </p>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact</h3>
            <p class="text-gray-600">
              Don't contact me, I want nothing to do with you.
            </p>
          </div>
        </div>
        
        <div class="border-t border-gray-200 mt-8 pt-8">
          <p class="text-center text-gray-500 text-sm">
            Â© 2025 Jordi's Blog. All rights reserved.
          </p>
        </div>
      </div>
    </footer>

    <!-- Styles -->
    <style is:global>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
      }
    </style>
  </body>
</html>
