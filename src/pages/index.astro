---
import Layout from '../layouts/Layout.astro';

// Dynamically import all blog posts and sort by date (newest first)
const postImportResult = await Astro.glob('../pages/posts/*.md');
const posts = postImportResult
  .map((post) => ({
    ...post.frontmatter,
    slug: post.file.split('/').pop().replace('.md', ''),
  }))
  .sort(
    (a, b) =>
      new Date(b.pubDate).valueOf() -
      new Date(a.pubDate).valueOf()
  );
---

<Layout title="Jordi's Blog">
  <div class="bg-white py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          Jordi's <span class="text-blue-600">Blog</span>
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 max-w-2xl mx-auto">
          Interesting stuff, mostly AI slop.
        </p>
      </div>

      <!-- Main Content: Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Column A: Hero Image -->
        <div class="lg:col-span-1 flex items-center justify-start">
<img src="/z-image-20251211-170033-4.png" alt="Jordi's Blog Hero Image" 
                class="w-full max-w-sm h-auto rounded-lg shadow-md">
        </div>
        
        <!-- Column B: Blog Posts -->
        <div class="lg:col-span-1">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Blog Posts</h2>
          
          <div class="space-y-6">
            {
              posts.map((post) => (
                <article class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                  <div class="flex items-center justify-between mb-2">
                    <time class="text-sm text-gray-500" datetime={post.pubDate}>
                      {new Date(post.pubDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    <a href={`/posts/${post.slug}`} class="hover:text-blue-600 transition-colors">
                      {post.title}
                    </a>
                  </h3>
                  
                  <p class="text-gray-600">
                    {post.description}
                  </p>
                </article>
              ))
            }
          </div>

          <!-- Simple footer -->
          <div class="mt-16 pt-8 border-t border-gray-200">
            <p class="text-gray-500 text-sm">
              That's all for now. Check back when I get around to writing something else.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>